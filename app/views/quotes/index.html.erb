<p id="notice"><%= notice %></p>

<%= nav_bar brand: "Frases hilárias ditas na Novatics", brand_link: "/" %>

<table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Frase</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td>"<%= quote.message %>"</td>
        <td><%= quote.author %></td>
        <td><%= link_to 'Ver', quote, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_quote_path(quote), class: "btn btn-primary" %></td>
        <td><%= link_to 'Apagar', quote, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova frase', new_quote_path %>
